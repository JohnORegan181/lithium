#!/bin/sh

RED="\033[31m"
GREEN="\033[32m"
BLUE="\033[34m"
RESET="\033[0m"

USRHST="$(whoami)@$(uname -n)"
OS="$(uname)"

printf "${GREEN}            ${USRHST}\n"
printf "\n"                             
printf "             d######              OS: $(uname -r)\n"
printf "           .d#####$               Kernel: $(uname)\n"
printf "          .######P                Arch: $(uname -m)\n"
printf "         z######P                 Machine: $(uname -n)\n"
printf "        d######\n"
printf "      .d######\n"
printf "     .######$\n"
printf "    z#######beeeeee\n"
printf "   d#############*\n"
printf "           ####$\n"
printf "          d###*\n"
printf "         d###\n"
printf "        d##*\n"
printf "       d#P\n"
printf "     .##\n"
printf "    .#P\n"
printf "   .#\n"
printf "  .P${RESET}\n"
